<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Assemblies - SkyTech</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">SkyTech</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container" style="margin-top: 60px;">
        <h1>Manage Assemblies</h1>
        <form action="/assemblies" method="post" class="form-inline">
            <div class="form-group">
                <label for="parts">Parts</label>
                <select multiple class="form-control" id="parts" name="parts">
                    <% parts.forEach(function(part) { %>
                        <option value="<%= part._id %>"><%= part.name %></option>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create Assembly</button>
        </form>
        <table class="table table-striped" style="margin-top: 20px;">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Parts</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% assemblies.forEach(function(assembly) { %>
                    <tr>
                        <td><%= assembly.date.toDateString() %></td>
                        <td>
                            <ul>
                                <% assembly.parts.forEach(function(part) { %>
                                    <li><%= part.name %></li>
                                <% }); %>
                            </ul>
                        </td>
                        <td>
                            <form action="/assemblies/delete/<%= assembly._id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <footer class="text-center" style="margin-top: 20px;">
        <p>Projeto Final PW 23/24</p>
        <p>Diogo Silva, Joel Tapia, Bruno Bento, João Mendonça</p>
    </footer>
</body>
</html>
